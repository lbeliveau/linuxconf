" .vimrc

set autoindent
set ignorecase
set smartcase
set number
set report=1
set shiftwidth=4
set tabstop=4
set history=50
set wildmode=list:longest,full
set showmode
set showcmd
set expandtab
set colorcolumn=80

"set textwidth=79
"set nowrap
"set nocompatible       " Use Vim defaults (much better!)

if has('syntax')
	syntax on
    colorscheme torte
endif
"
